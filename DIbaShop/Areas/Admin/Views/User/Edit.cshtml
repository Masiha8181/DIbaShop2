@{
    Layout = "_AdminLayout";
    
}
@model DataLayer.DTO.User.EditUserDTO
<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-sm-6">
                <h3>ویرایش کاربر @Model.FirstName  @Model.LastName </h3>
            </div>
            <div class="col-12 col-sm-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html"> <i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item">کنترل های فرم</li>
                    <li class="breadcrumb-item active">ورودی پایه</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header pb-0">
                    <h5>ساخت کاربر</h5>
                </div>
                <form class="form theme-form" method="post" asp-action="Edit">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <div class="mb-3">
                                    <label asp-for="FirstName" class="form-label"></label>
                                    <input asp-for="FirstName" value="@Model.FirstName" type="text" class="form-control" placeholder="نام کاربر را وارد کنید:" />
                                    <span class="text-danger" asp-validation-for="FirstName"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="mb-3">
                                    <label asp-for="LastName" class="form-label"></label>
                                    <input asp-for="LastName" value="@Model.LastName" type="text" class="form-control" placeholder="نام خانوادگی کاربر را وارد کنید:" />
                                    <span class="text-danger" asp-validation-for="LastName"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Password"></label>
                                    <input asp-for="ConfirmPassword" class="form-control" type="password"
                                           placeholder="رمز عبور خود را وارد کنید">
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="ConfirmPassword"></label>
                                    <input asp-for="Password" class="form-control" type="password"
                                           placeholder="رمز عبور خود را وارد کنید">
                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Email"></label>
                                    <input asp-for="Email" value="@Model.Email" class="form-control" type="email"
                                           placeholder="ایمیل  خود را وارد کنید">
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                            </div>
                        </div>
                    
                        <div class="row">
                            <div class="col">
                                <div class="mb-3">
                                    <label class="form-label"  asp-for="IsAdmin"></label>
                                 @{
                                     if (Model.IsAdmin == true)
                                     {
                                         <input asp-for="IsAdmin" checked="checked" type="checkbox" />
                                     }
                                     else
                                     {
                                            <input asp-for="IsAdmin"  type="checkbox" />
                                     }
                         
                                 }

                                    <span class="text-danger" asp-validation-for="IsAdmin"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <div class="mb-3">
                                    <label class="form-label"  asp-for="IsActive"></label>
                                    @{
                                        if (Model.IsActive == true)
                                        {
                                            <input asp-for="IsActive" id="2" checked type="checkbox" />
                                        }
                                        else
                                        {
                                            <input asp-for="IsActive" id="2" type="checkbox" />
                                        }
                         
                                    }

                                    <span class="text-danger" asp-validation-for="IsActive"></span>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="card-footer text-end">
                        <button class="btn btn-primary" type="submit">ویرایش</button>
                        <input class="btn btn-light" type="reset" value="لغو">
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>