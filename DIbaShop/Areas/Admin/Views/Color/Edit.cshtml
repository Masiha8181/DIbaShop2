@{
    Layout = "_AdminLayout";
}
@model DataLayer.DTO.Color.EditColorDTO
<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-sm-6">
                <h3>ساخت  رنگ  </h3>
            </div>
            <div class="col-12 col-sm-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html"> <i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item">کنترل های فرم</li>
                    <li class="breadcrumb-item active">ورودی پایه</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header pb-0">
                    <h5>ساخت رنگ  </h5>
                </div>

                <form class="form theme-form" method="post" asp-action="Edit">
                    <div class="card-body">
                        <input value="@Model.id" asp-for="id" type="hidden"/>
                        <div class="row">

                            <div class="col">
                                <div class="mb-3">
                                    <label asp-for="ColorValue" class="form-label"></label>
                                    <input asp-for="ColorValue" type="text" class="form-control" placeholder="نام رنگ را وارد کنید:"/>
                                    <span class="text-danger" asp-validation-for="ColorValue"></span>
                                </div>
                            </div>
                        </div>


                        <div class="row">

                            <div class="col">
                                <div class="mb-3">
                                    <label asp-for="ColorCode" class="form-label"></label>
                                    <input asp-for="ColorCode" type="color" class="form-control" placeholder="مقدار سایز را وارد کنید:"/>
                                    <span class="text-danger" asp-validation-for="ColorCode"></span>
                                </div>
                            </div>
                        </div>







                    </div>
                    <div class="card-footer text-end">
                        <button class="btn btn-primary" type="submit">ویرایش</button>
                        <input class="btn btn-light" type="reset" value="لغو">
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>