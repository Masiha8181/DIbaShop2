@{
    Layout = "_AdminLayout";
}
@model IEnumerable<DataLayer.Entities.Color>
<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-sm-6">
                <h3>فهرست رنگ ها  </h3>
            </div>
            <div class="col-12 col-sm-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg></a></li>
                    <li class="breadcrumb-item">جداول داده</li>
                    <li class="breadcrumb-item active">جداول داده ای پایه</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">

            <div class="card">

                <div class="card-body">
                    <a href="/admin/Color/create" class="btn btn-success" style="margin: 20px 0px">ایجاد رنگ</a>
                    <div class="table-responsive">

                        <table id="Table" class="table table-bordered">
                            <thead>
                                <tr>

                                    <th>نام  رنگ :</th>
                                    <th>  رنگ :</th>

                                    <th>عملیات :</th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tbody>
                                    <tr>

                                        <td>@item.ColorValue</td>
                                        <td><span style="width: 50px; height: 50px; display: inline-block; border-radius: 50%; background-color: @item.ColorCode"></span></td>



                                        <td>

                                            <a href="/admin/Color/Edit/@item.id" class="btn btn-primary">ویرایش</a>
                                            <a href="/admin/Color/Remove/@item.id" class="btn btn-danger">حذف</a>


                                        </td>
                                    </tr>
                                </tbody>
                            }
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

